[merge]
  ff = no
  commit = no

[pull]
	rebase = false

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[include]
    path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
    features = catppuccin-mocha

[delta "interactive"]
    keep-plus-minus-markers = false

[safe]
	directory = *
